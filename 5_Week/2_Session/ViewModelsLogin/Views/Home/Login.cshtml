@model LogUser
<h2>Login.</h2>
<h5>Code from Model: @Model.secret_code</h5>
<form method="post" asp-controller="Home" asp-action="Login">
    <div class="form-group">
        <span asp-validation-for="log_email"></span>
        <label asp-for="log_email"></label>
        <input class="form-control" asp-for="log_email">
    </div>
    <div class="form-group">
        <span asp-validation-for="log_password"></span>
        <label asp-for="log_password"></label>
        <input class="form-control" asp-for="log_password">
    </div>
    <input type="hidden" asp-for="secret_code">
    <input type="submit" value="Login">
</form>